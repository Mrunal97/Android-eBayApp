<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/sellerInfo_layout_id">

    <TextView
        android:id="@+id/sellerInfo_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="14dp"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="Seller Information" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:textSize="17sp"
        android:layout_marginLeft="30dp"
        android:id="@+id/s_id" ></TextView>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#C0C0C0"
        android:layout_marginStart="25dp"
        />

    <TextView
        android:id="@+id/returnPolicies_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"

        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"

        android:text="Return Policies" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:textSize="17sp"
        android:layout_marginLeft="30dp"
        android:id="@+id/rp_id" ></TextView>


</LinearLayout>