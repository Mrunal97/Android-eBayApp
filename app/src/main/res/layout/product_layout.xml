<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/product_layout_id">


    <ProgressBar
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="56dp"
        android:id="@+id/progress_id"
        android:layout_gravity="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Searching Products..."
        android:id="@+id/progressText_id"
        android:layout_marginStart="160dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal"
        android:id="@+id/horizontal_recycler"/>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

<!--        <TextView-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"/>-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="23dp"
            android:layout_marginStart="8dp"
            android:textSize="18sp"
            android:textColor="#000000"
            android:id="@+id/title_id"></TextView>


        <TextView
            android:layout_width="74dp"
            android:layout_height="25dp"
            android:layout_marginTop="80dp"
            android:layout_marginStart="15dp"
            android:textColor="@color/green"
            android:textSize="17sp"
            android:textStyle="bold"
            android:id="@+id/price_id"></TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginStart="90dp"
            android:layout_marginTop="80dp"
            android:id="@+id/shipPrice_id"></TextView>


        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#C0C0C0"
            android:id="@+id/line1"
            android:layout_marginStart="25dp"
            android:layout_marginTop="110dp"/>

<ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/information"
    android:layout_marginTop="115dp"
    android:layout_marginStart="15dp"
    android:id="@+id/product_info_id"></ImageView>

    <TextView
        android:id="@+id/prodFeatures_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="55dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="115dp"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#000000"
        android:text="Product Features" />

        <TextView
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="140dp"
            android:layout_marginStart="15dp"
            android:id="@+id/subtitleLabel_id"
            android:text="Subtitle"
            android:textSize="16sp"
            android:textColor="#000000"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp"
        android:layout_marginStart="95dp"
        android:textSize="15sp"

        android:id="@+id/subtitle_id" ></TextView>

        <TextView
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="176dp"
            android:layout_marginStart="15dp"
            android:id="@+id/brandLabel_id"
            android:text="Brand"
            android:textSize="16sp"
            android:textColor="#000000"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="176dp"
        android:textSize="15sp"
        android:layout_marginLeft="95dp"
        android:id="@+id/brand_id" ></TextView>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#C0C0C0"
        android:layout_marginStart="25dp"
        android:layout_marginTop="200dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/wrench"
            android:layout_marginStart="15dp"
            android:layout_marginTop="210dp"
            android:id="@+id/wrench_id"></ImageView>
    <TextView
        android:id="@+id/specifications_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="55dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="211dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#000000"
        android:text="Specifications:" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="242dp"
        android:textSize="15sp"
        android:layout_marginLeft="30dp"
        android:id="@+id/specifications_text_id" ></TextView>

    </RelativeLayout>


</LinearLayout>